#!/bin/bash
#
# ================================================
#  This Script Create Basic Directories of EMINFO
# ================================================
#
# option: -c to check directories
#
#

BASE_DIR="/usr/local/eminfo"
if [ -f ${BASE_DIR}/bin/include -a -s ${BASE_DIR}/bin/include ]; then
        source ${BASE_DIR}/bin/include 2>&1
        rc=$?
        [ "$rc" != "0" ] && {
                echo "load include file failed with status $rc"
                exit 1
        }
else
        echo "${BASE_DIR}/bin/include not exist or empty. exit" 
        exit 1
fi

### Directories DEF
array_directories=( 
	${BIN_DIR} 
	${CONF_DIR} 
	${HANDLER_DIR} 
	${OPT_DIR} 
	${PLUGIN_DIR} 
	${INNER_DIR} 
	${TMP_DIR} 
	${RUN_DIR} 
	${LOG_DIR} 
	${BACK_DIR} 
	${SNAPSHOT_DIR} 
)
### SHs DEF
array_shs=(
	${INCLUDE_FILE}
	${PLUTIL}
	${PRECHECK_SH}
	${UPDATE_SH}
	${REPORT_SH}
	${CHECKCONF_SH}
	${POSTLOG_SH}
	${TAKESNAP_SH}
	${SENDMAIL}
	${SENDEMAIL}
	${MAKEDIR_SH}
	${SETINIT_SH}
)

MODE=0
[ "$1" == "-c" ] && MODE=1

mkrc=0
ckrc=0
### Create Directory
for ((i=0;i<${#array_directories[@]};i++)) 
do
	if [ "${MODE}" == "1" ]; then
		[ -d "${array_directories[i]}" -a -w "${array_directories[i]}" ] && {
			echo -e "[$(echo_green "OK")]   : [${array_directories[i]}] prepared."
		} || {
			echo -e "[$(echo_red "WARN")] : [${array_directories[i]}] not prepared."
			((ckrc++))
		}
	else
		/bin/mkdir -v -p -m 755 "${array_directories[i]}"
		if [ "$?" != "0" ]; then
			((mkrc++))
		fi
	fi
done
### +x SH
for ((i=0;i<=${#array_shs[@]};i++))
do
	if [ "${MODE}" == "1" ]; then
		[ -f "${array_shs[i]}" -a -x "${array_shs[i]}" ] && {
			echo -e "[$(echo_green "OK")]   : [${array_shs[i]}] prepared."
		} || {
			echo -e "[$(echo_red "WARN")] : [${array_shs[i]}] not prepared."
			((ckrc++))
		}
	else
		/bin/chmod +x "${array_shs[i]}"
		if [ "$?" != "0" ]; then
			((mkrc++))
		fi
	fi

done
[ "${MODE}" == "1" ] && exit ${ckrc} || exit ${mkrc}
